<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/styles.css" />
        <link rel="icon" href="/logo/favicon.ico" type="image/x-icon" />
        <title>New movie</title>
    </head>
    <body>
        <div class="container">
            <%- include('header') %>
            <div class="form-container">
                <form
                    action="/movies/movie/new"
                    method="post"
                    class="new-movie-form"
                >
                    <label for="name">Movie name</label>
                    <input type="text" name="name" id="name" required />

                    <label for="year">Release year</label>
                    <input type="number" name="year" id="year" required />

                    <!-- Genres input -->
                    <p>Pick movie genres</p>
                    <div>
                        <input
                            type="checkbox"
                            name="genres"
                            id="genre1"
                            value="Action"
                        />
                        <label for="genre1">Action</label>
                    </div>
                    <div>
                        <input
                            type="checkbox"
                            name="genres"
                            id="genre2"
                            value="Adventure"
                        />
                        <label for="genre2">Adventure</label>
                    </div>
                    <div>
                        <input
                            type="checkbox"
                            name="genres"
                            id="genre3"
                            value="Comedy"
                        />
                        <label for="genre3">Comedy</label>
                    </div>
                    <div>
                        <input
                            type="checkbox"
                            name="genres"
                            id="genre4"
                            value="Sci-Fi"
                        />
                        <label for="genre4">Sci-Fi</label>
                    </div>
                    <div>
                        <input
                            type="checkbox"
                            name="genres"
                            id="genre5"
                            value="Horror"
                        />
                        <label for="genre5">Horror</label>
                    </div>
                    <!-- Checkboxes end -->

                    <label for="rating">Rating</label>
                    <input
                        type="number"
                        name="rating"
                        id="rating"
                        step="0.1"
                        required
                    />

                    <label for="description">Description</label>
                    <textarea
                        name="description"
                        id="description"
                        rows="4"
                    ></textarea>

                    <button type="submit" class="button-new-movie">
                        Submit
                    </button>
                </form>
                <%- include('partials/errors') %>
            </div>
        </div>
    </body>
</html>
