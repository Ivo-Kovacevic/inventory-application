<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/styles.css" />
        <link rel="icon" href="/logo/favicon.ico" type="image/x-icon" />
        <title>Home</title>
    </head>
    <body>
        <div class="container">
            <%- include('header') %>
            <form
                action="/movies/movie/new"
                method="get"
                class="new-movie-form"
            >
                <label for="title">Movie title</label>
                <input type="text" name="title" id="title" />

                <label for="year">Release year</label>
                <input type="number" name="year" id="year" />

                <!-- Genres input -->
                <p>Pick movie genres</p>
                <div>
                    <input
                        type="checkbox"
                        name="genre"
                        id="genre1"
                        value="Action"
                    />
                    <label for="genre1">Action</label>
                </div>
                <div>
                    <input
                        type="checkbox"
                        name="genre"
                        id="genre2"
                        value="Adventure"
                    />
                    <label for="genre2">Adventure</label>
                </div>
                <div>
                    <input
                        type="checkbox"
                        name="genre"
                        id="genre3"
                        value="Comedy"
                    />
                    <label for="genre3">Comedy</label>
                </div>
                <div>
                    <input
                        type="checkbox"
                        name="genre"
                        id="genre4"
                        value="Sci-fi"
                    />
                    <label for="genre4">Sci-fi</label>
                </div>
                <div>
                    <input
                        type="checkbox"
                        name="genre"
                        id="genre5"
                        value="Horror"
                    />
                    <label for="genre5">Horror</label>
                </div>
                <!-- Checkboxes end -->

                <label for="rating">Rating</label>
                <input type="number" name="rating" id="rating" />

                <label for="description">Description</label>
                <textarea
                    name="description"
                    id="description"
                    rows="4"
                ></textarea>

                <button type="submit" class="button-new-movie">
                    Add new movie
                </button>
            </form>
        </div>
    </body>
</html>
