<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/styles.css" />
        <title>Movies</title>
    </head>
    <body>
        <div class="container">
            <%- include('header') %>
            <% if (locals.movies) { %>
                <div class="grid">
                    <% movies.forEach(movie => { %>
                        <a class="movie" href="/movies/movie/<%- movie.title %>">
                            <h3> <%= movie.title %> </h3>
                        </a>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </body>
</html>
