<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/stylesheets/styles.css" />
        <title>Genres</title>
    </head>
    <body>
        <div class="container">
            <%- include('header') %>
            <% if (locals.genres) { %>
                <div class="flex-container">
                    <% genres.forEach(genre => { %>
                        <a class="genre" href="/genres/genre/<%- genre.name %>">
                            <img src="<%= genre.path %>" alt="">
                            <h3> <%= genre.name %> </h3>
                        </a>
                    <% }) %>
                </div>
            <% } %>
        </div>
    </body>
</html>
